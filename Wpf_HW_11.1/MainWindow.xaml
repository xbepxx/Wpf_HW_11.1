<Window x:Class="Wpf_HW_11._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_HW_11._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500">
    <Grid>
        <Path Fill="Red" Stroke="Black" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Path.Data>
                <GeometryGroup>
                    <EllipseGeometry Center="150,150" RadiusX="150" RadiusY="150"/>
                    <EllipseGeometry Center="150,150" RadiusX="125" RadiusY="125"/>
                    <!--<RectangleGeometry Rect="25,140,250,25">
                        <RectangleGeometry.Transform />
                    </RectangleGeometry>-->
                </GeometryGroup>
            </Path.Data>
        </Path>
        <Rectangle Width="250" Height="25" Fill="Red" Stroke="Black">
            <Rectangle.RenderTransform>
                <TransformGroup>
                <RotateTransform Angle="-45"/>
                <TranslateTransform X="26.5" Y="90"/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
    </Grid>
</Window>
